<section class="vacationPage">
<section role="dashboard">
        <h1>Welcome Aboard, <span aria-live="assertive"></span>!</h1>
    </section>
    <section class="about modal">
        <div class="closeButton"><i class="fas fa-times fa-3x"></i></div>
        <h1></h1>
        <p></p>
        <br>
        <p></p>
        <br>
        <div>

        </div>
    </section>
    <section role="region" class="startdash modal">
        <div class="modal-content">
            <div class="closeButton"><i class="fas fa-times fa-3x"></i></div>
            <h1></h1>
            <p></p>
        </div>
    </section>

    <section role="region" class="signout modal">
        <div class="modal-content">
            <div class="closeButton"><i class="fas fa-times fa-3x"></i></div>
            <h3></h3>
            <button class="signOutNo">No, just one minute...</button>
            <button class="signOutYes">Yes, I'm done!</button>
        </div>
    </section>

    <section class="row" role="region">
        <div class="addboxdashboard col-6">
            <div class="addVacation">
                <h2>Add Vacation <i class="fas fa-plane"></i> :</h2>
            </div>
        </div>
    </section>
    
    <section class="vacationFormInput modal" role="region">
        <form role="form" class="vacationFileInput modal-content">
            <fieldset class="row">
                <div class="closeButton"><i class="fas fa-times fa-3x"></i></div>
                <h3>Vacation</h3>
                <div class="row">
                    <div class="col-6">
                        <label for="city">City:</label>
                        <br>
                        <input class="city" type="text" name="cityName">
                    </div>
                    <div class="col-6">
                        <label for="city">Country:</label>
                        <br>
                        <input class="country" type="text" name="countryName">
                    </div>
                </div>
                <div class="row">
                    <div class="col-6">
                        <label for="city">Flight:</label>
                        <br>
                        <input class="city" type="datetime-local" name="arrivalDate">
                    </div>
                    <div class="col-6">
                        <label for="city">Departure:</label>
                        <br>
                        <input class="country" type="datetime-local" name="departureDate">
                    </div>
                </div>
                <div class="">
                    <button class="btn postbtn" type="submit">Submit</button>
                </div>
            </fieldset>
        </form>
    </section>

    <section role="region">
        <h2>Vacations:</h2>
        <hr>
        <div class="listofVacations" aria-live="assertive"></div>
    </section>
</section>